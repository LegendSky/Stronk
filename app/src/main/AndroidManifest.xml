<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.androidhive.materialtabs" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme" >

        <!-- Menu -->
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Workouts start -->
        <activity
            android:name=".activity.Pull1Activity"
            android:label="@string/title_activity_pull1"
            android:parentActivityName=".activity.MainActivity" >
        </activity>
        <activity
            android:name=".activity.Pull2Activity"
            android:label="@string/title_activity_pull2"
            android:parentActivityName=".activity.MainActivity" >
        </activity>
        <activity
            android:name=".activity.Push1Activity"
            android:label="@string/title_activity_push1"
            android:parentActivityName=".activity.MainActivity" >
        </activity>
        <activity
            android:name=".activity.Push2Activity"
            android:label="@string/title_activity_push2"
            android:parentActivityName=".activity.MainActivity" >
        </activity>
        <activity
            android:name=".activity.SharedPrefs"
            android:label="@string/title_activity_prefs"
            android:parentActivityName=".activity.MainActivity" >
        </activity>
    </application>

</manifest>
